<%= render "layouts/decidim/admin/application" do %>
  <div class="process-title">
    <div class="process-title-content">
      <%= link_to t("decidim.admin.titles.templates"), decidim_admin_templates.root_url, target: "_blank" %>
    </div>
  </div>

  <div class="process-content">
    <%= render partial: "decidim/templates/admin/shared/secondary_nav" %>

    <div class="card with-overflow" id="templates">
      <div class="card-divider">
        <h2 class="card-title">
          <%= yield :title %>
        </h2>
      </div>
      <div class="card-section">
        <div class="table-scroll">
          <table class="table-list">
            <thead>
              <%= yield :table_head %>
            </thead>
            <tbody>
              <%= yield %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<% end %>
