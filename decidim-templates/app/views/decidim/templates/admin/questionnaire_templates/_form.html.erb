<%= form.object.errors.full_messages %>
<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t(".title") %></h2>
    <%= form.submit t(".save"), class: "button tiny button--title" %>
  </div>

  <div class="card-section">
    <div class="row column">
      <%= form.translated :text_field, :name %>
    </div>

    <div class="row column">
      <%# form.translated :text_area, :description, rows: 3 %>
    </div>
  </div>
</div>

<% if form.object.persisted? %>
  <div class="card">
    <div class="card-divider">
      <h2 class="card-title"><%= t(".questionnaire") %></h2>
        <%= link_to t(".edit"), edit_questionnaire_templates_questionnaire_path(template_id: template.id), class: "button tiny button--title" %>
    </div>

    <div class="card-section">
      <div class="row column">
        <% if template.templatable&.questions&.any? %>
          <%= cell("decidim/forms/question_readonly", collection: template.templatable&.questions) %>
        <% else %>
          <%= t(".empty") %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>