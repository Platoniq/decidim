<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t("templates", scope: "decidim.admin.titles") %>
    </h2>
  </div>
  <div class="card-section">
  <% if @templates.any? %>
    <div class="table-scroll">
      <table class="table-list">
        <thead>
          <tr>
            <th><%= t("template.fields.templatable_type", scope: "decidim.models") %></th>
            <th><%= t("template.fields.name", scope: "decidim.models") %></th>
            <th><%= t("template.fields.created_at", scope: "decidim.models") %></th>
          </tr>
        </thead>
        <tbody>
          <% @templates.each do |template| %>
            <tr data-template-id="<%= template.id %>">
              <td><%= link_to t(template.templatable_type, scope: "decidim.models.template.types"), url_for(action: :index, controller: template.resource_name) %></td>
              <td><%= link_to translated_attribute(template.name), url_for(action: :edit, controller: template.resource_name, id: template.id) %></td>
              <td><%= l template.created_at, format: :long %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <%= t("templates.empty", scope: "decidim.admin") %>
  <% end %>
  </div>
</div>
