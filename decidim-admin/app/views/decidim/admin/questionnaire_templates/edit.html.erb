<%= decidim_form_for(@form, html: { class: "form edit_questionnaire_template" }) do |f| %>
  <div class="card">
    <div class="card-divider">
      <h2 class="card-title"><%= t ".title" %></h2>
      <%= link_to t(".questionnaire"), edit_questionnaire_template_questionnaire_path(questionnaire_template_id: questionnaire_template.id), class: "button tiny button--title" %>
    </div>
    <div class="card-section">
      <%= render partial: "form", object: f %>
    </div>
  </div>
  <div class="button--double form-general-submit">
    <%= f.submit t(".save") %>
  </div>
<% end %>
