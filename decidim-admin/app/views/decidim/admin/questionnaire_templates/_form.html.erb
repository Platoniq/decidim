<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t(".title") %></h2>
    <%= form.submit t(".save"), class: "button tiny button--title" %>
  </div>

  <div class="card-section">
    <div class="row column">
      <%= form.translated :text_field, :title %>
    </div>

    <div class="row column">
      <%= form.translated :text_area, :description, rows: 3 %>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t(".questionnaire") %></h2>
    <% if questionnaire_template.persisted? %>
      <%= link_to t(".edit"), edit_questionnaire_template_questionnaire_path(questionnaire_template_id: questionnaire_template.id), class: "button tiny button--title" %>
    <% end %>
  </div>

  <div class="card-section">
    <div class="row column">
      <% if questionnaire_template.questionnaire.questions.any? %>
        <%= cell("decidim/forms/question_readonly", collection: questionnaire_template.questionnaire.questions) %>
      <% else %>
        <%= t(".empty") %>
      <% end %>
    </div>
  </div>
</div>